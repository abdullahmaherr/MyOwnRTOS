/*===============================================================================
 *     		       		 	ISR Functions Definition 		                     *
 ================================================================================*/
__attribute((naked)) void SVC_Handler(void)
{
	__asm(	"TST LR, #4		\n\t"
			"ITE EQ			\n\t"
			"MRSEQ R0,MSP	\n\t"
			"MRSNE R0,MSP	\n\t"
			"B OS_SVC_services"
			);
}
